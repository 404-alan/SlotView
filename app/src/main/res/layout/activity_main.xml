<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/overlaySwitch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="切换Overlay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>



    <!--Bitmap实际尺寸-->
    <!--    android:layout_width="973px"-->
    <!--    android:layout_height="1356px"-->
    <com.example.justfortest.slotviews.CircleSlotView
        android:id="@+id/circleView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="870px"
        android:layout_height="1210px"
        />

    <com.example.justfortest.slotviews.RectSlotView
        android:id="@+id/rectView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="908px"
        android:layout_height="653px"
        />


    <Button
        android:id="@+id/hideSlotButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="隐藏Slot"
        android:layout_width="0dp"
        android:layout_height="80dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>